<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.elkarte.net/site/package-info">
<package-info xmlns="http://www.elkarte.net/site/package-info" xmlns:elk="http://www.elkarte.net/">
	<id>Spuds:MemberAwards</id>
	<name>Member Awards</name>
	<version>1.0</version>
	<type>addon</type>
	<license><![CDATA[
/**
 * Member Awards
 *
 * @author spuds
 * @license MPL 1.1 http://mozilla.org/MPL/1.1/
 *
 * @version 1.0
 */
]]></license>
	<install for="1.0 Alpha - 1.0.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<database>add_settings.php</database>
		<modification format="xml" type="file">install.xml</modification>
		<modification format="xml" type="file">install_display_template.xml</modification>
		<modification format="xml" type="file">language.xml</modification>
		<create-dir name="awards" destination="$boarddir" />
		<require-file name="Awards.controller.php" destination="CONTROLLERDIR" />
		<require-file name="AwardsIntegration.php" destination="SOURCEDIR" />
		<require-file name="ProfileAwards.controller.php" destination="CONTROLLERDIR" />
		<require-file name="AwardsSubs.php" destination="SUBSDIR" />
		<require-file name="AwardsManage.template.php" destination="$themedir" />
		<require-file name="AwardsProfile.template.php" destination="$themedir" />
		<require-file name="AwardsManage.english.php" destination="LANGUAGEDIR" />
		<require-file name="award.gif" destination="$imagesdir" />
		<require-file name="awards.gif" destination="$imagesdir/admin" />
		<require-file name="awards.js" destination="$themedir/scripts" />
		<require-dir name="awards" destination="$imagesdir" />
		<hook hook="integrate_admin_areas" file="SOURCEDIR/AwardsIntegration.php" function="iaa_member_awards"/>
		<hook hook="integrate_profile_areas" file="SOURCEDIR/AwardsIntegration.php" function="ipa_member_awards"/>
		<hook hook="integrate_load_permissions" file="SOURCEDIR/AwardsIntegration.php" function="ilp_member_awards"/>
		<hook hook="integrate_menu_buttons" file="SOURCEDIR/AwardsIntegration.php" function="imb_member_awards"/>
		<hook hook="integrate_user_info" file="SOURCEDIR/AwardsIntegration.php" function="iui_member_awards"/>
		<credits url="www.elkarte.net" license="MPL 1.1" copyright="spuds">Member Awards</credits>
		<redirect url="index.php?action=admin;area=awards;sa=main" timeout="5000">redirect.txt</redirect>
	</install>

	<uninstall for="1.0 Alpha - 1.0.99">
		<hook reverse="true" hook="integrate_admin_areas" file="SOURCEDIR/AwardsIntegration.php" function="member_awards_admin_areas"/>
		<hook reverse="true" hook="integrate_profile_areas" file="SOURCEDIR/AwardsIntegration.php" function="member_awards_profile_areas"/>
		<hook reverse="true" hook="integrate_load_permissions" file="SOURCEDIR/AwardsIntegration.php" function="member_awards_load_permissions"/>
		<hook reverse="true" hook="integrate_menu_buttons" file="SOURCEDIR/AwardsIntegration.php" function="member_awards_menu_buttons"/>
		<modification format="xml" type="file" reverse="true">install.xml</modification>
		<modification format="xml" type="file" reverse="true">install_display_template.xml</modification>
		<modification format="xml" type="file" reverse="true">language.xml</modification>
		<remove-file name="CONTROLLERDIR/Awards.controller.php" />
		<remove-file name="SOURCEDIR/AwardsIntegration.php" />
		<remove-file name="CONTROLLERDIR/ProfileAwards.controller.php" />
		<remove-file name="SUBSDIR/AwardsSubs.php" />
		<remove-file name="$themedir/AwardsManage.template.php" />
		<remove-file name="$themedir/AwardsProfile.template.php" />
		<remove-file name="LANGUAGEDIR/AwardsManage.english.php" />
		<remove-file name="$imagesdir/award.gif" />
		<remove-file name="$imagesdir/admin/awards.gif" />
		<remove-file name="$themedir/scripts/awards.js" />
		<remove-dir name="$imagesdir/awards" />
	</uninstall>
</package-info>